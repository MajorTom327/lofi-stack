version: 2
updates:
  - package-ecosystem: github-actions
    directory: /
    schedule:
      interval: daily
<% if (reviewer) { %>
    reviewers:
      - "<%= reviewer %>"
<% } %>
  - package-ecosystem: "npm" # See documentation for possible values
    directory: "/" # Location of package manifests
    schedule:
      interval: "daily"
<% if (reviewer) { %>
    reviewers:
      - "<%= reviewer %>"
<% } %>
